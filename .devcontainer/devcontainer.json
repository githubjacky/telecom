{
  "name": "telecom",
  "remoteEnv": {
    "SHELL":"/usr/bin/zsh",
    "GIT_EMAIL":"opottghjk00@gmail.com",
    "GIT_NAME":"Hsiu-Hsuan(Jacky) Yeh",
    "PATH": "${containerEnv:PATH}:/root/.local/bin:/usr/local/cuda-12.4/bin",
    "LD_LIBRARY_PATH": "${containerEnv:LD_LIBRARY_PATH}:/usr/local/cuda-12.4/targets/x86_64-linux/lib"
  },
  "mounts": [
    {
        "source": "${localEnv:HOME}/.ssh/known_hosts",
        "target": "/root/.ssh/known_hosts",
        "type": "bind"
    },
    {
        "source": "/usr/local/cuda-12.4",
        "target": "/usr/local/cuda-12.4",
        "type": "bind"
    },
    {
        "source": "/home/mysql_output/node04/cdr/",
        "target": "/workspaces/telecom/data/cdr",
        "type": "bind"
    },
    {
        "source": "/home/mysql_output/node04/user_info/",
        "target": "/workspaces/telecom/data/user_info",
        "type": "bind"
    }
  ],
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/georgofenbeck/features/lazygit-linuxbinary:1": {},
    "ghcr.io/devcontainers-contrib/features/neovim-apt-get:1": {
      "version": "latest"
    }
  },
  "image": "ubuntu:24.04",
  "runArgs": ["--gpus=all"],
  "postCreateCommand": [
    "sh",
    "-c",
    "chmod +x .devcontainer/post-create-command.sh && ./.devcontainer/post-create-command.sh"
  ]
}

